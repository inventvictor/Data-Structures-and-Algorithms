#include <stdio.h>
#include <stdbool.h>
#include "arrayStack.h"

bool stack_isEmpty()
{
	bool b = false;
	if(ptr_counter == MAXSIZE)
	{
		b = true;
	}
	return b;
	}

bool stack_isFull()
{
	bool b = false;
	if(ptr_counter == 0)
	{
		b = true;
	}
	return b;
	}

char stack_peek(int *arr_ptr)
{
	int data = 0;
	if(!stack_isEmpty())
	{
		arr_ptr++;
		data = *arr_ptr;
		arr_ptr--;
	}
	return data;
	}

bool stack_push(char data, int *arr_ptr)
{
	bool b = false;
	if(!stack_isFull())
	{
		*arr_ptr = data;
		arr_ptr--;
		ptr_counter--;
		b = true;
	}
	return b;
	}

char stack_pop(int *arr_ptr)
{
	int data = 0;
	arr_ptr++;
	ptr_counter++;
	data = *arr_ptr;
	*arr_ptr = 0;
	return data;
	}

int stack_size()
{
	return MAXSIZE - ptr_counter;
	}
